#!/bin/sh -e

echo "--- yay setups ---"
yay --save --answerclean All
yay --save --answerdiff None

echo "--- pacman installations ---"
sudo pacman -R --noconfirm pcmanfm palemoon-bin
sudo pacman -Rd --nodeps --noconfirm picom 
sudo pacman -S --noconfirm jq task apparmor asciidoc uthash gcc meson virtualbox-guest-utils micro xclip go go-tools python-docutils libxdg-basedir fzf 
sudo pacman -S --noconfirm feh ranger rofi docker zsh zsh-completions tilix konsole flameshot peek python-pygments python-pywal unzip python2 zip seahorse 
sudo pacman -R --noconfirm dunstify
sudo pacman -S --noconfirm python-pip keepassxc libxcrypt-compat

echo "--- yay installations ---"
yay -S nerd-fonts-source-code-pro --noprovides --noconfirm
yay -S google-chrome --noprovides --noconfirm
yay -S postman-bin --noprovides --noconfirm
yay -S rofi-greenclip --noprovides --noconfirm
yay -S polybar-git --noprovides --noconfirm

echo "--- zsh ---"
git clone https://github.com/zsh-users/zsh-syntax-highlighting.git /home/dev/.oh-my-zsh/custom/plugins/zsh-syntax-highlighting
git clone --depth=1 https://github.com/romkatv/powerlevel10k.git /home/dev/.oh-my-zsh/custom/themes/powerlevel10k
git clone https://github.com/ibhagwan/picom-ibhagwan-git

cd picom-ibhagwan-git/ 
makepkg 
sudo pacman -U *.pkg.tar.xz --noconfirm 
cd ..

sudo mv ranger.desktop /usr/share/applications/ranger.desktop

echo "--- zsh stuff ---"
sudo tar -C /usr/share/themes -xvf ./orchi.tar.xz
sudo unzip Nordian-Breeze-GTK.zip -d /usr/share/themes/
sudo usermod --shell $(which zsh) $USER
chsh -s $(which zsh) <<< '1234'

echo "--- docker installation ---"
sudo systemctl start docker.service
sudo systemctl enable docker.service
sudo usermod -aG docker $USER
sudo curl -L "https://github.com/docker/compose/releases/download/1.26.2/docker-compose-$(uname -s)-$(uname -m)" -o /usr/local/bin/docker-compose

echo "--- installing intellij ---"
curl -L https://download.jetbrains.com/idea/ideaIU-2022.1.tar.gz > intellij.tar.gz
tar -zxvf intellij.tar.gz
mv idea-IU-* idea

echo "--- installing pycharm ---"
curl -L https://download.jetbrains.com/python/pycharm-professional-2022.1.tar.gz > pycharm.tar.gz
tar -zxvf pycharm.tar.gz
mv pycharm-* pycharm

echo "--- loading jetbrains configs ---"
sudo cp -r /home/dev/.config/JetBrains/colors /home/dev/.config/JetBrains/IntelliJIdea2022.1/ 
sudo cp -r /home/dev/.config/JetBrains/colors /home/dev/.config/JetBrains/PyCharm2022.1/

sudo cp -r /home/dev/.config/JetBrains/keymaps /home/dev/.config/JetBrains/IntelliJIdea2022.1/ 
sudo cp -r /home/dev/.config/JetBrains/keymaps /home/dev/.config/JetBrains/PyCharm2022.1/ 

echo "--- obsidian installations ---"
curl -L https://github.com/obsidianmd/obsidian-releases/releases/download/v0.12.19/Obsidian-0.12.19.AppImage --output /home/dev/obsidian

echo "--- python installations ---"
sudo mkdir -p /usr/lib/python3.8/site-packages/pygments/styles/
sudo mv /home/dev/pygment_orchid.py /usr/lib/python3.8/site-packages/pygments/styles/orchid.py
sudo mv /home/dev/init.py /usr/lib/python3.8/site-packages/pygments/styles/__init__.py
sudo pip install zenipy
sudo mkdir /home/dev/.config/ranger/colorschemes/
sudo mkdir /home/dev/.config/flameshot/

curl -sSL https://install.python-poetry.org | python3 -

echo "--- installing java ---"
sudo curl -s "https://get.sdkman.io" | bash
source "$HOME/.sdkman/bin/sdkman-init.sh"

echo "--- fixing permissions ---"
sudo chown -R dev:dev  /home/dev/.config
sudo chown -R dev:dev /home/dev/.cache

echo "--- making everything executable ---"
sudo chmod +x /usr/local/bin/docker-compose
sudo chmod -R +x  /home/dev/scripts/
sudo chmod +x  /home/dev/.config/ranger/scope.sh
sudo chmod +x  /home/dev/obsidian

echo "--- activating style ---"
/home/dev/scripts/change_style.sh vaporwave

echo "---removing stuff ---"
rm -Rf /home/dev/screenshots

echo "--- usb stuff for streamdeck ---"
git clone https://github.com/AskMeAgain/streamdeck4p
echo 'SUBSYSTEM=="usb", ATTRS{idVendor}=="0fd9", ATTRS{idProduct}=="0080", GROUP="users", MODE="0666"' | sudo tee -a  /etc/udev/rules.d/70-streamdeck.rules >/dev/null   ï€— 22:09:30
